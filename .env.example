# ── Server ───────────────────────────────────────────────────────────────────
PORT=3000
NODE_ENV=development

# ── Cryptography ──────────────────────────────────────────────────────────────
# PBKDF2 iterations — NIST SP 800-132 recommends >= 310,000 for SHA-512
PBKDF2_ITERATIONS=310000
# Salt size in bytes (must be >= 16)
SALT_BYTES=32
# IV size in bytes — GCM standard: 12 bytes
IV_BYTES=12
# AES key size in bytes — AES-256 = 32 bytes
KEY_BYTES=32

# ── Upload ────────────────────────────────────────────────────────────────────
MAX_UPLOAD_SIZE_MB=50

# ── Rate Limiting ─────────────────────────────────────────────────────────────
# Window in milliseconds
THROTTLE_TTL_MS=60000
# Max requests per window per IP
THROTTLE_LIMIT=20

# ── Password ──────────────────────────────────────────────────────────────────
# Password TTL in milliseconds (default: 5 minutes)
PASSWORD_EXPIRY_MS=300000
# Bytes of entropy to generate per password (base64url → ~43 chars for 32 bytes)
PASSWORD_BYTES=32

# ── CORS (production only) ────────────────────────────────────────────────────
# Comma-separated allowed origins
ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# ── Docker Compose resource limits ────────────────────────────────────────────
COMPOSE_CPU_LIMIT=1.0
COMPOSE_CPU_RESERVATION=0.25
COMPOSE_MEM_LIMIT=512M
COMPOSE_MEM_RESERVATION=128M
